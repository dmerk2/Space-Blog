{{!-- for the posts on main page --}}
<ul class="post-list">
    {{#each posts as |post|}}
        <li class="post">
            <h2>{{post.title}}</h2>
            <p>{{post.postBody}}</p>
            <p>Posted by {{post.username}} on {{post.createdAt}}</p>
            <a href="/post/{{post._id}}">View Post</a>
        </li>
    {{/each}}
</ul>