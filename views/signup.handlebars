<div class="card">
    <div class="card-body">
        <h3 class="card-header">Sign up</h3>
        <form id="signup-form">
            <div class="form-group">
                <label for="username-signup">Username</label>
                <input type="text" class="form-control" id="username-signup" autofocus="true" aria-describedby="Username">
            </div>
            <div class="form-group">
                <label for="email-signup">Email</label>
                <input type="email" class="form-control" id="email-signup" autofocus="true" aria-describedby="Email">
            </div>
            <div class="form-group">
                <label for="password-signup">Password</label>
                <input type="password" class="form-control" id="password-signup" autofocus="true">
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Sign up</button>
        </form>
    </div>
</div>

